<p id="notice"><%= notice %></p>

<h1>Listing Zombies</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Idade</th>
      <th>Nascimento</th>
      <th>Admissao</th>
      <th>Apodrecendo</th>
      <th>Salario</th>
      <th>Heranca</th>
      <th>Email</th>
      <th>Bio</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @zombies.each do |zombie| %>
      <tr>
        <td><%= zombie.nome %></td>
        <td><%= zombie.idade %></td>
        <td><%= zombie.nascimento %></td>
        <td><%= zombie.admissao %></td>
        <td><%= zombie.apodrecendo %></td>
        <td><%= zombie.salario %></td>
        <td><%= zombie.heranca %></td>
        <td><%= zombie.email %></td>
        <td><%= zombie.bio %></td>
        <td><%= link_to 'Show', zombie %></td>
        <td><%= link_to 'Edit', edit_zombie_path(zombie) %></td>
        <td><%= link_to 'Destroy', zombie, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

